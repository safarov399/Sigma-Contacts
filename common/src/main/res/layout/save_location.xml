<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/save_location_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/save_location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Device"
        android:layout_marginLeft="12dp"
        app:layout_constraintStart_toEndOf="@id/save_location_iv"
        app:layout_constraintTop_toTopOf="@id/save_location_iv"
        app:layout_constraintBottom_toBottomOf="@id/save_location_iv"
        />

</androidx.constraintlayout.widget.ConstraintLayout>