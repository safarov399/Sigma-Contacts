<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/details_profile_image_view_background_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/details_profile_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/details_profile_image_view_letter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S"
        android:textSize="100sp"
        app:layout_constraintStart_toStartOf="@id/details_profile_image_view_background_iv"
        app:layout_constraintEnd_toEndOf="@id/details_profile_image_view_background_iv"
        app:layout_constraintTop_toTopOf="@id/details_profile_image_view_background_iv"
        app:layout_constraintBottom_toBottomOf="@id/details_profile_image_view_background_iv"/>


</androidx.constraintlayout.widget.ConstraintLayout>