<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/organize_row_view_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/account_dialog_phone"
        android:paddingEnd="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/organize_row_view_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Merge &amp;Fix"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/organize_row_view_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/organize_row_view_description_tv"
        />
    <TextView
        android:id="@+id/organize_row_view_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        tools:text="Easy ways to fix up your contacts"
        app:layout_constraintStart_toEndOf="@id/organize_row_view_iv"
        app:layout_constraintTop_toBottomOf="@id/organize_row_view_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>