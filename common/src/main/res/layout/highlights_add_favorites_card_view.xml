<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/highlights_add_favorites_background"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/highlights_add_favorites_nested_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/add_favorites_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorites_empty_state"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/add_favorites_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/highlights_add_favorites_card_title_start_padding"
            android:paddingBottom="8dp"
            android:text="Quick access to your favorite people"
            android:textColor="@color/default_color_inverse"
            android:textSize="15sp"
            android:paddingEnd="24dp"
            android:lineSpacingExtra="5sp"
            android:fontFamily="@font/roboto_semi_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/add_favorites_iv"
            app:layout_constraintTop_toTopOf="@id/add_favorites_iv" />

        <TextView
            android:id="@+id/add_favorites_description_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add people to Favorites so you can more easily find and contact them"
            android:textSize="14sp"
            android:lineSpacingExtra="5sp"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/add_favorites_title_tv"
            app:layout_constraintTop_toBottomOf="@id/add_favorites_title_tv"
            android:paddingBottom="12dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <me.safarov399.common.custom_views.highlights.HighlightsActionButton
        android:id="@+id/add_favorites_action_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:imageSrc="@drawable/add"
        app:layout_constraintTop_toBottomOf="@id/highlights_add_favorites_nested_constraint_layout"
        app:text="Add favorites" />

</androidx.constraintlayout.widget.ConstraintLayout>