<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="imageSrc" format="reference" />
    <attr name="text" format="string" />
    <attr name="title" format="string" />
    <attr name="description" format="string" />
    <attr name="textSize" format="dimension" />


    <declare-styleable name="OneImageOneTextView">
        <attr name="imageSrc" />
        <attr name="text" />
        <attr name="textSize" />
    </declare-styleable>


    <declare-styleable name="OneImageTwoTextView">
        <attr name="imageSrc" />

        <attr name="title" />
        <attr name="titleTextSize" format="dimension" />

        <attr name="text" />
        <attr name="textSize" />
    </declare-styleable>


    <declare-styleable name="OrganizeRowView">
        <attr name="imageSrc" />
        <attr name="title" />
        <attr name="description" />
    </declare-styleable>
    <declare-styleable name="HighlightsActionButton">
        <attr name="imageSrc" />
        <attr name="text" />
    </declare-styleable>
    <declare-styleable name="HighlightsCardView">
        <attr name="title" />
        <attr name="description" />
        <attr name="imageSrc" />
        <attr name="btnImgSrc" format="reference" />
        <attr name="btnText" format="string" />
        <attr name="closeIconEnabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LabelHeaderView">
        <attr name="label" format="string" />
        <attr name="imageSrc" />
    </declare-styleable>
    <declare-styleable name="SimpleDoubleRowView">
        <attr name="title" />
        <attr name="description" />
    </declare-styleable>
    <declare-styleable name="SimpleOneRowView">
        <attr name="title" />
    </declare-styleable>
    <declare-styleable name="BackgroundAndImageViewSmall">
        <attr name="imageSrc" />
    </declare-styleable>

</resources>